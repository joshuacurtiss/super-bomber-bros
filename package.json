{
  "name": "super-bomber-bros",
  "version": "0.0.1",
  "description": "Super Bomber Bros",
  "main": "index.js",
  "author": "Josh Curtiss <josh@curtiss.me>",
  "license": "MIT",
  "scripts": {
    "serve": "live-server --port=8000 --no-browser dist",
    "start": "parcel src/client/index.html -p 8000",
    "build": "parcel build --public-url '.' src/client/index.html --out-dir dist",
    "build:docker": "docker build . -t joshuacurtiss/super-bomber-bros",
    "watch": "parcel watch src/client/index.html --out-dir dist"
  },
  "dependencies": {
    "kaboom": "^0.5.1",
    "live-server": "^1.2.1"
  },
  "devDependencies": {
    "parcel-bundler": "1.12.3",
    "parcel-plugin-clean-easy": "^1.0.2",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "typescript": "^4.3.5"
  },
  "alias": {
    "kaboom": "./node_modules/kaboom/dist/kaboom.mjs"
  },
  "parcelCleanPaths": [
    "dist"
  ]
}
