{
  "name": "super-bomber-bros",
  "version": "0.0.1",
  "description": "Super Bomber Bros",
  "main": "index.js",
  "author": "Josh Curtiss <josh@curtiss.me>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf static/assets/**/*.ogg",
    "pack": "ts-node pack",
    "serve": "ts-node src/server",
    "start": "npm run pack && parcel src/client/index.html -p 8000",
    "build": "npm run clean && npm run pack && npm run bundle",
    "bundle": "parcel build --public-url '.' src/client/index.html --out-dir dist",
    "build:docker": "docker build . -t joshuacurtiss/super-bomber-bros",
    "watch": "npm run pack && parcel watch src/client/index.html --out-dir dist"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "express": "^4.17.1",
    "kaboom": "^0.5.1",
    "ts-node": "^10.1.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.18",
    "@types/node": "^16.4.13",
    "fluent-ffmpeg": "^2.1.2",
    "parcel-bundler": "1.12.3",
    "parcel-plugin-clean-easy": "^1.0.2",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "alias": {
    "kaboom": "./node_modules/kaboom/dist/kaboom.mjs"
  },
  "parcelCleanPaths": [
    "dist"
  ]
}
